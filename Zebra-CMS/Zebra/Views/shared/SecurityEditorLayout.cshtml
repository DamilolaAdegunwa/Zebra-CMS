@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
  @*  <script src="~/bundles/jquery" type="text/javascript"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/jquery-css")
    @Styles.Render("~/Content/icons-css")
    <title>Zebra Security Editor</title>
    <style type="text/css">
        *{margin:0;padding:0;}
    </style>
</head>
<body>
    <header></header>
    <div class="zebra-security-editor-container"> 
        @RenderBody()
    </div>

    <canvas id ="zebra-mouse-loader" class="zebra-mouse-loader" width="100" height="100" style="position:fixed;top:50%;left:50%;z-index:100">
    </canvas>  
    <footer></footer>
</body>
<script src="~/bundles/zebra-js" type="text/javascript"></script>
<script src="~/bundles/utilities-js" type="text/javascript"></script>
<style>
    .zebra-security-editor-container{
        height: 100%;
        margin: 8px;
    }
</style>
</html>